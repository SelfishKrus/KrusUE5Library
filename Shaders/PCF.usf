shadow = 0;
float texelSize = 1.0 / _TexSize;

for (int u = -1; u <= 1; u++)
{
    for (int v = -1; v <= 1; v++)
    {
        float pcfDepth = Texture2DSample(
            lightPassDepthMap,
            lightPassDepthMapSampler, 
            shadowCoord + float2(u, v) * texelSize).r / _ZFar;
        shadow += camPassDepth - _DepthBias > pcfDepth ? 0.0 : 1.0;
    }
}

shadow /= 9.0;